---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
import '@fontsource/geist-mono'
import '@/styles/global.css'
import { ClientRouter } from 'astro:transitions'
import { SEO } from 'astro-seo'
import { withBase } from '@/utils/url'
import Footer from '@/components/layout/Footer.astro'
import { Image } from 'astro:assets'
import logoIcon from '@/assets/logo.svg'

const lang = 'en'
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<SEO
			title={title}
			titleTemplate="%s :: Coke Posada"
			description={description}
			canonical={Astro.url.toString()}
			openGraph={{
				basic: {
					title: 'Astro Full Starter',
					type: 'website',
					image: 'https://astro-full-starter.pages.dev/og-image.jpg'
				},
				image: {
					alt: 'Astro Full Starter by Coke Posada'
				},
				optional: {
					description: description
				}
			}}
			twitter={{
				creator: '@cokeposada'
			}}
		/>

		<link rel="alternate" href={`${Astro.site}en/`} hreflang="en" />
		<link rel="alternate" href={`${Astro.site}es/`} hreflang="es" />
		<link rel="sitemap" href={withBase('/sitemap-index.xml')} />
		<link rel="icon" href={withBase('/favicon.svg')} type="image/svg+xml" />
		<!-- <AstroFont
			config={[
				{
					src: [],
					name: 'Open Sauce One',
					// Google Fonts URL
					googleFontsURL:
						'https://fonts.googleapis.com/css2?family=Open+Sauce+One:wght@400;500;700&display=swap',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif'
				}
			]}
		/> -->
		<ClientRouter />
	</head>
	<body>
		<div class="nav-container">
			<div class="background"></div>
			<div class="container md:pr-15">
				<a class="logo" href={withBase('')}><Image src={logoIcon} alt="Logo" /></a>
				<nav>
					<ul class="menu menu-vertical lg:menu-horizontal">
						<li>
							<a href={withBase('about')}>about</a>
						</li>
						<li>
							<a href={withBase('services')}>services</a>
						</li>
						<li>
							<a href={withBase('cases')}>cases</a>
						</li>
						<li>
							<a href={withBase('contact')}>contact</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>

		<slot />
		<Footer />
	</body>
</html>
