---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
import '@fontsource/geist-mono'
import '@/styles/global.css'
import { ClientRouter } from 'astro:transitions'
import { SEO } from 'astro-seo'
import { withBase } from '@/utils/url'
import Footer from '@/components/layout/Footer.astro'
import { Image } from 'astro:assets'
import logoIcon from '@/assets/logo.svg'

const lang = 'en'

// Active link detection
const currentPath = Astro.url.pathname
const isActive = (href: string) => {
	const siteUrl = Astro.site?.toString() || ''
	const path = href.replace(siteUrl, '')
	const active = path === '' ? currentPath === '/' : currentPath.startsWith(path)
	return active ? 'font-bold' : ''
}

const isServiceActive = () =>
	currentPath.match(/\/fintech|\/healthtech|\/retail|\/saas/) ? 'font-bold' : ''
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<SEO
			title={title}
			titleTemplate="%s :: Coke Posada"
			description={description}
			canonical={Astro.url.toString()}
			openGraph={{
				basic: {
					title: 'Astro Full Starter',
					type: 'website',
					image: 'https://astro-full-starter.pages.dev/og-image.jpg'
				},
				image: {
					alt: 'Astro Full Starter by Coke Posada'
				},
				optional: {
					description: description
				}
			}}
			twitter={{
				creator: '@cokeposada'
			}}
		/>

		<link rel="alternate" href={`${Astro.site}en/`} hreflang="en" />
		<link rel="alternate" href={`${Astro.site}es/`} hreflang="es" />
		<link rel="sitemap" href={withBase('/sitemap-index.xml')} />
		<link rel="icon" href={withBase('/favicon.svg')} type="image/svg+xml" />

		<ClientRouter />
	</head>
	<body>
		<div class="nav-container">
			<div class="background"></div>
			<div class="container md:pr-15">
				<a class="logo" href={withBase('')}><Image src={logoIcon} alt="Logo" /></a>
				<nav>
					<ul class="menu menu-vertical lg:menu-horizontal">
						<li>
							<div class="dropdown dropdown-hover">
								<a tabindex="0" role="button" class={isServiceActive()}>services</a>
								<ul
									tabindex="0"
									class="dropdown-content menu bg-base-100 rounded-box z-1 ml-0 w-52 p-2 shadow-sm"
								>
									<li>
										<a href={withBase('fintech')} class={isActive(withBase('fintech'))}>fintech</a>
									</li>
									<li>
										<a href={withBase('healthtech')} class={isActive(withBase('healthtech'))}
											>healthtech</a
										>
									</li>
									<li>
										<a href={withBase('retail')} class={isActive(withBase('retail'))}>retail</a>
									</li>
									<li>
										<a href={withBase('saas')} class={isActive(withBase('saas'))}>saas</a>
									</li>
								</ul>
							</div>
						</li>
						<li>
							<a href="https://medium.com/wearejaya" target="_blank">blog</a>
						</li>
						<li>
							<a href="https://www.linkedin.com/company/jaya-apps" target="_blank">culture</a>
						</li>
						<li>
							<a href={withBase('contact')} class={isActive(withBase('contact'))}>contact</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>

		<slot />
		<Footer />
	</body>
</html>

<style>
	/* Fix para dropdown hover - evita que feche quando o mouse passa entre o botão e o dropdown */
	.dropdown-hover:hover .dropdown-content {
		display: block;
	}

	.dropdown-hover .dropdown-content {
		margin-top: 4px; /* Adiciona um pequeno gap visual */
	}

	/* Garante que o dropdown permaneça aberto quando o mouse está sobre ele */
	.dropdown-hover .dropdown-content:hover {
		display: block;
	}
</style>
