---
import Layout from '@/layouts/Layout.astro'
import ServiceHero from '@/components/services/ServiceHero.astro'
import { Image } from 'astro:assets'
import retailImg from '@/assets/retail/retail.png'
import retailClientsImg from '@/assets/retail/retail-clients.png'
import ServiceClients from '@/components/services/ServiceClients.astro'
import ServiceExperience from '@/components/services/ServiceExperience.astro'
import retailExperienceImg from '@/assets/retail/retail-experience.png'
import Impact from '@/components/impact/Impact.astro'
import Team from '@/components/team/Team.astro'
import { getTranslations, t } from '@/i18n/translations'

const locale = 'en'
const translations = await getTranslations(locale)
---

<Layout
	title={t(translations, 'retail.title')}
	description={t(translations, 'retail.description')}
>
	<main class="nav-padding">
		<ServiceHero>
			<Image src={retailImg} alt="Retail" slot="hero-image" />
			<div slot="hero-title">
				<Fragment set:html={t(translations, 'retail.hero.titleHtml')} />
			</div>
			<div class="statistics-section" slot="hero-statistics">
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">30M</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'retail.hero.stat1Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">10</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'retail.hero.stat2Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">7</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'retail.hero.stat3Label')} />
					</div>
				</div>
			</div>
		</ServiceHero>
		<ServiceClients>
			<Image src={retailClientsImg} alt="Retail Clients" slot="clients-image" />
		</ServiceClients>
		<ServiceExperience>
			<Image
				src={retailExperienceImg}
				alt="Fintech Experience"
				slot="experience-image"
				class="experience-image"
			/>

			<h2 class="experience-title" slot="experience-title">
				<Fragment set:html={t(translations, 'retail.experience.titleHtml')} />
			</h2>
			<p class="experience-text" slot="experience-text">
				<Fragment set:html={t(translations, 'retail.experience.text')} />
			</p>
			<div class="experience-why" slot="experience-why">
				<h2 class="experience-why-title">{t(translations, 'retail.experience.whyTitle')}</h2>
				<div class="experience-why-list">
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'retail.experience.why1')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'retail.experience.why2')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'retail.experience.why3')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'retail.experience.why4')} />
					</div>
				</div>
			</div>
		</ServiceExperience>
		<Impact />
		<Team />
	</main>
</Layout>
