---
import Layout from '@/layouts/Layout.astro'
import ServiceHero from '@/components/services/ServiceHero.astro'
import { Image } from 'astro:assets'
import saasImg from '@/assets/saas/saas.png'
import saasClientsImg from '@/assets/saas/saas-clients.png'
import ServiceClients from '@/components/services/ServiceClients.astro'
import ServiceExperience from '@/components/services/ServiceExperience.astro'
import saasExperienceImg from '@/assets/saas/saas-experience.png'
import Impact from '@/components/impact/Impact.astro'
import Team from '@/components/team/Team.astro'
import { getTranslations, t } from '@/i18n/translations'
import type { Locale } from '@/i18n/utils'

interface Props {
	locale: Locale
}

const { locale } = Astro.props
const translations = await getTranslations(locale)
---

<Layout
	title={t(translations, 'saas.title')}
	description={t(translations, 'saas.description')}
>
	<main class="nav-padding">
		<ServiceHero>
			<Image src={saasImg} alt="SaaS" slot="hero-image" />
			<div slot="hero-title">
				<Fragment set:html={t(translations, 'saas.hero.titleHtml')} />
			</div>
			<div class="statistics-section" slot="hero-statistics">
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">1M</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'saas.hero.stat1Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">20</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'saas.hero.stat2Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">12</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'saas.hero.stat3Label')} />
					</div>
				</div>
			</div>
		</ServiceHero>
		<ServiceClients>
			<Image src={saasClientsImg} alt="SaaS Clients" slot="clients-image" />
		</ServiceClients>
		<ServiceExperience>
			<Image
				src={saasExperienceImg}
				alt="Fintech Experience"
				slot="experience-image"
				class="experience-image"
			/>

			<h2 class="experience-title" slot="experience-title">
				<Fragment set:html={t(translations, 'saas.experience.titleHtml')} />
			</h2>
			<p class="experience-text" slot="experience-text">
				<Fragment set:html={t(translations, 'saas.experience.text')} />
			</p>
			<div class="experience-why" slot="experience-why">
				<h2 class="experience-why-title">{t(translations, 'saas.experience.whyTitle')}</h2>
				<div class="experience-why-list">
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'saas.experience.why1')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'saas.experience.why2')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'saas.experience.why3')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'saas.experience.why4')} />
					</div>
				</div>
			</div>
		</ServiceExperience>
		<Impact />
		<Team />
	</main>
</Layout>
