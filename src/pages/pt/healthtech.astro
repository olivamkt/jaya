---
import Layout from '@/layouts/Layout.astro'
import ServiceHero from '@/components/services/ServiceHero.astro'
import { Image } from 'astro:assets'
import healthtechImg from '@/assets/healthtech/healthtech.png'
import healthtechClientsImg from '@/assets/healthtech/healthtech-clients.png'
import ServiceClients from '@/components/services/ServiceClients.astro'
import ServiceExperience from '@/components/services/ServiceExperience.astro'
import healthtechExperienceImg from '@/assets/healthtech/healthtech-experience.png'
import Impact from '@/components/impact/Impact.astro'
import Team from '@/components/team/Team.astro'
import { getTranslations, t } from '@/i18n/translations'

const locale = 'pt'
const translations = await getTranslations(locale)
---

<Layout
	title={t(translations, 'healthtech.title')}
	description={t(translations, 'healthtech.description')}
>
	<main class="nav-padding">
		<ServiceHero>
			<Image src={healthtechImg} alt="Healthtech" slot="hero-image" />
			<div slot="hero-title">
				<Fragment set:html={t(translations, 'healthtech.hero.titleHtml')} />
			</div>
			<div class="statistics-section" slot="hero-statistics">
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">20M</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'healthtech.hero.stat1Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">25</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'healthtech.hero.stat2Label')} />
					</div>
				</div>
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">9</div>
					</div>
					<div class="statistic-text">
						<Fragment set:html={t(translations, 'healthtech.hero.stat3Label')} />
					</div>
				</div>
			</div>
		</ServiceHero>
		<ServiceClients>
			<Image src={healthtechClientsImg} alt="Healthtech Clients" slot="clients-image" />
		</ServiceClients>
		<ServiceExperience>
			<Image
				src={healthtechExperienceImg}
				alt="Healthtech Experience"
				slot="experience-image"
				class="experience-image"
			/>

			<h2 class="experience-title" slot="experience-title">
				<Fragment set:html={t(translations, 'healthtech.experience.titleHtml')} />
			</h2>
			<p class="experience-text" slot="experience-text">
				<Fragment set:html={t(translations, 'healthtech.experience.text')} />
			</p>
			<div class="experience-why" slot="experience-why">
				<h2 class="experience-why-title">{t(translations, 'healthtech.experience.whyTitle')}</h2>
				<div class="experience-why-list">
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'healthtech.experience.why1')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'healthtech.experience.why2')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'healthtech.experience.why3')} />
					</div>
					<div class="experience-why-item">
						<Fragment set:html={t(translations, 'healthtech.experience.why4')} />
					</div>
				</div>
			</div>
		</ServiceExperience>
		<Impact />
		<Team />
	</main>
</Layout>
