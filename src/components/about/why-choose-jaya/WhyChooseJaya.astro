---
import { withBase } from '@/utils/url'
import { getTranslations, t } from '@/i18n/translations'
import { getLocale, getLocalizedPath } from '@/i18n/utils'

const locale = getLocale(Astro)
const translations = await getTranslations(locale)
---

<style>
	@reference '@/styles/global.css';

	.why-choose-jaya-section {
		@apply py-20;

		.content-container {
			@apply container flex items-center;
			@apply gap-10;
		}

		.image-content {
			@apply relative;
			@apply w-1/2;

			.teamwork-image {
				@apply h-auto w-full;
				@apply rounded-lg;
			}

			.organic-shape {
				@apply absolute;
				@apply -top-10 -left-10;
				@apply h-32 w-32;
				@apply bg-purple-500/30;
				@apply rounded-full;
				@apply blur-xl;
			}
		}

		.text-content {
			@apply w-1/2;

			h2 {
				@apply mb-8;
				@apply text-primary text-4xl font-bold;
			}

			.intro-text {
				@apply mb-12;
				@apply text-primary text-lg leading-relaxed;
			}

			.advantages-grid {
				@apply flex;
				@apply gap-6;
			}

			.advantage-box {
				@apply p-6;
				@apply bg-primary-light;
				@apply text-white;
				@apply rounded-tr-[50px] rounded-bl-[50px];
			}

			.advantage-number {
				@apply mb-2;
				@apply text-lg font-bold;
			}

			.advantage-title {
				@apply mb-2;
				@apply font-bold;
			}

			.advantage-text {
				@apply text-sm;
			}
		}

		.cta-button {
			@apply btn btn-outline;
			@apply flex;
			@apply max-w-[420px];
			@apply mt-10 ml-auto;
			@apply text-primary-light;
			@apply border-primary-light;
		}
	}
</style>

<section class="why-choose-jaya-section">
	<div class="content-container">
		<div class="image-content"></div>

		<div class="text-content">
			<h2>{t(translations, 'about.why.title')}</h2>
			<p class="intro-text">
				{t(translations, 'about.why.intro')}
			</p>

			<div class="advantages-grid">
				<div class="advantage-box">
					<div class="advantage-number">{t(translations, 'about.why.adv1Title')}</div>
					<div class="advantage-text">
						{t(translations, 'about.why.adv1Text')}
					</div>
				</div>

				<div class="advantage-box">
					<div class="advantage-number">{t(translations, 'about.why.adv2Title')}</div>
					<div class="advantage-text">
						{t(translations, 'about.why.adv2Text')}
					</div>
				</div>

				<div class="advantage-box">
					<div class="advantage-number">{t(translations, 'about.why.adv3Title')}</div>
					<div class="advantage-text">
						{t(translations, 'about.why.adv3Text')}
					</div>
				</div>
			</div>

			<a href={withBase(getLocalizedPath('contact', locale))} class="cta-button">
				{t(translations, 'about.why.cta')}
			</a>
		</div>
	</div>
</section>
