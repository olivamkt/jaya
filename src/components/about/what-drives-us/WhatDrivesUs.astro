---
import { Image } from 'astro:assets'
import teamImg from '@/assets/home/team.png'
---

<style>
	@reference "../../../styles/global.css";

	.what-drives-us-section {
		@apply py-20;

		.content-container {
			@apply container;
			@apply flex items-center gap-10;
		}

		.text-content {
			@apply w-1/2;

			h2 {
				@apply text-primary;
				@apply mb-8;
				@apply text-4xl font-bold;
			}

			.intro-text {
				@apply text-primary;
				@apply mb-12;
				@apply text-lg leading-relaxed;
			}

			.principles-grid {
				@apply mb-12;
				@apply flex gap-6;
			}

			.principle-box {
				@apply bg-primary-light text-white;
				@apply p-6;
				@apply rounded-br-[50px];
			}

			.principle-text {
				@apply text-sm;
			}
		}

		.image-content {
			@apply relative;
			@apply w-1/2;

			.team-image {
				@apply h-auto w-full;
				@apply rounded-lg;
			}

			.gradient-overlay {
				@apply absolute inset-0;
				@apply rounded-lg;
				@apply bg-gradient-to-r from-purple-500/20 to-pink-500/20;
			}
		}

		.cta-button {
			@apply btn btn-outline btn-primary btn-wide;
			@apply mx-auto block;
			@apply rounded-full;
		}
	}
</style>

<section class="what-drives-us-section">
	<div class="content-container">
		<div class="text-content">
			<h2>what drives us?</h2>
			<p class="intro-text">
				Our commitment is to connect people, boost careers and transform businesses with innovation
				and purpose. We offer strategic solutions for startups and disruptive projects, combining
				humanized software engineering and a highly qualified team to develop products that make a
				difference.
			</p>

			<div class="principles-grid">
				<div class="principle-box">
					<div class="principle-text">
						<b>Technology with Purpose</b>: We create solutions that generate value and real impact.
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<b>Continuous Innovation</b>: We are always learning, testing and evolving.
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<b>Collaboration and Diversity</b>: We unite global talents in remote and agile teams.
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<b>Transparency and Ethics</b>: We build relationships based on trust and respect.
					</div>
				</div>
			</div>

			<a href="/contact" class="btn btn-outline btn-primary btn-wide rounded-full">Get in touch</a>
		</div>

		<div class="image-content">
			<!-- <Image
				src={teamImg}
				alt="Jaya team with Statue of Liberty in background"
				class="team-image"
				width={500}
				height={400}
			/> -->
			<div class="gradient-overlay"></div>
		</div>
	</div>
</section>
