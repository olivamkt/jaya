---
import { withBase } from '@/utils/url'
import { getTranslations, t } from '@/i18n/translations'
import { getLocale, getLocalizedPath } from '@/i18n/utils'

const locale = getLocale(Astro)
const translations = await getTranslations(locale)
---

<style>
	@reference '@/styles/global.css';

	.what-drives-us-section {
		@apply py-20;

		.content-container {
			@apply container flex items-center;
			@apply gap-10;
		}

		.text-content {
			@apply w-1/2;

			h2 {
				@apply mb-8;
				@apply text-primary text-4xl font-bold;
			}

			.intro-text {
				@apply mb-12;
				@apply text-primary text-lg leading-relaxed;
			}

			.principles-grid {
				@apply flex;
				@apply mb-12;
				@apply gap-6;
			}

			.principle-box {
				@apply p-6;
				@apply bg-primary-light;
				@apply text-white;
				@apply rounded-br-[50px];
			}

			.principle-text {
				@apply text-sm;
			}

			.btn-get-in-touch {
				@apply btn btn-outline btn-primary;
				@apply mx-auto block;
			}
		}

		.image-content {
			@apply relative;
			@apply w-1/2;

			.team-image {
				@apply h-auto w-full;
				@apply rounded-lg;
			}

			.gradient-overlay {
				@apply absolute inset-0;
				@apply bg-gradient-to-r from-purple-500/20 to-pink-500/20;
				@apply rounded-lg;
			}
		}

		.cta-button {
			@apply btn btn-outline btn-primary;
			@apply mx-auto block;
		}
	}
</style>

<section class="what-drives-us-section">
	<div class="content-container">
		<div class="text-content">
			<h2>{t(translations, 'about.drives.title')}</h2>
			<p class="intro-text">
				{t(translations, 'about.drives.intro')}
			</p>

			<div class="principles-grid">
				<div class="principle-box">
					<div class="principle-text">
						<Fragment set:html={t(translations, 'about.drives.principle1')} />
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<Fragment set:html={t(translations, 'about.drives.principle2')} />
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<Fragment set:html={t(translations, 'about.drives.principle3')} />
					</div>
				</div>

				<div class="principle-box">
					<div class="principle-text">
						<Fragment set:html={t(translations, 'about.drives.principle4')} />
					</div>
				</div>
			</div>

			<a href={withBase(getLocalizedPath('contact', locale))} class="btn-get-in-touch">
				{t(translations, 'about.drives.cta')}
			</a>
		</div>

		<div class="image-content">
			<div class="gradient-overlay"></div>
		</div>
	</div>
</section>
