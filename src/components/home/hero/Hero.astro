---
import heroLeftImg from '@/assets/home/hero-left.png'
import heroRightImg from '@/assets/home/hero-right.png'
import { Image } from 'astro:assets'
import { withBase } from '@/utils/url'

// Statistics data
const statistics = [
	{
		number: '200',
		text: {
			first: 'Projects',
			second: 'Delivered',
			bold: 'first'
		}
	},
	{
		number: '150',
		text: {
			first: 'Partnerships',
			second: 'Established',
			bold: 'second'
		}
	},
	{
		number: '98%',
		text: {
			first: 'Active',
			second: 'Collaborators',
			bold: 'first'
		}
	}
]
---

<style>
	@import '../../../styles/global.css';

	@keyframes slideInFromRight {
		0% {
			transform: translateX(-100px);
			opacity: 0;
		}
		100% {
			transform: translateX(0);
			opacity: 1;
		}
	}

	@keyframes slideInFromLeft {
		0% {
			transform: translateX(100px);
			opacity: 0;
		}
		100% {
			transform: translateX(0);
			opacity: 1;
		}
	}

	@keyframes slideFromLeft {
		0% {
			transform: translateX(-100%);
			opacity: 0;
		}
		10% {
			transform: translateX(0);
		}
		30% {
			transform: translateX(0);
			opacity: 1;
		}
		40% {
			transform: translateX(-100%);
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}

	@keyframes slideFromRight {
		0% {
			transform: translateX(100%);
			opacity: 0;
		}
		10% {
			transform: translateX(0);
		}
		30% {
			transform: translateX(0);
			opacity: 1;
		}
		40% {
			transform: translateX(100%);
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}

	.hero-section {
		@apply relative;
	}

	.hero-slider {
		@apply relative mx-auto;
		@apply flex items-center justify-center;
		@apply min-h-[300px];
	}

	.hero-slide-text {
		@apply absolute text-center;
		@apply text-primary;
		font-size: 80px;
		line-height: 80px;
		opacity: 0;
		letter-spacing: -2px;
	}

	.slide-group-1 {
		animation: slideFromLeft 9s infinite;
	}

	.slide-group-2 {
		animation: slideFromRight 9s infinite;
		animation-delay: 3s;
	}

	.slide-group-3 {
		animation: slideFromLeft 9s infinite;
		animation-delay: 6s;
	}

	.hero-description {
		@apply mx-auto my-20 max-w-[415px];
		@apply text-center leading-[1.58] normal-case;
		@apply bg-body;
	}

	.hero-left-image {
		@apply absolute top-1/2 left-[-100px];
		@apply h-[260px] w-[275px];
		animation: slideInFromRight 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.hero-right-image {
		@apply absolute top-[30%] right-[-110px];
		@apply h-[260px] w-[275px];
		animation: slideInFromLeft 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.statistics-section {
		@apply mx-auto mt-10 mb-25;
		@apply flex justify-center gap-[100px];
	}

	.statistic-item {
		@apply flex items-end;
	}

	.statistic-number-container {
		@apply relative h-[90px] w-[90px];
		@apply bg-primary text-body;
		@apply text-[36px];
		@apply rounded-tl-[30%] rounded-br-[30%];

		&::before {
			@apply absolute -bottom-[14px] -left-[20px];
			@apply w-[60px];
			@apply text-primary text-[36px] font-bold;
			content: '+';
		}
	}

	.statistic-number {
		@apply absolute -bottom-[14px] left-0;
		@apply text-[36px] font-bold;
	}

	.statistic-text {
		@apply mt-10 ml-2;
		@apply text-primary text-[12px] normal-case italic;
	}

	.contact-button {
		@apply mx-auto;
		@apply flex max-w-[420px];
		@apply text-center;
		@apply rounded-full;
		@apply text-primary-light border-primary-light;
	}
</style>

<section class="hero-section relative container py-20">
	<div class="hero-slider">
		<div class="hero-slide-text slide-group-1">
			<em>reliable</em><br />
			<strong>software</strong><br />
			<strong>squad</strong>
		</div>
		<div class="hero-slide-text slide-group-2">
			<strong>strategic</strong><br />
			<em>nearshoring</em><br />
			<strong>partner</strong>
		</div>
		<div class="hero-slide-text slide-group-3">
			<strong>high-</strong><em>performing</em><br />
			<strong>remote team</strong>
		</div>
	</div>

	<div class="hero-description">
		Jaya is a fully remote <b>software consulting company,</b> founded in <b>2012</b> and partnering
		with <b>U.S. companies since 2016.</b> We specialize in strategic staff augmentation and long-term,
		high-impact projects, combining technical and cultural fit through a deep recruitment process. Behind
		every delivery, <b>we mentor our teams,</b> nurture <b>strong culture,</b> and <b
			>develop people who are inspired to build software that truly matters.</b
		>
	</div>

	<Image
		src={heroLeftImg}
		alt="Hero left illustration showing collaborative team work"
		class="hero-left-image"
	/>
	<Image
		src={heroRightImg}
		alt="Hero right illustration showing technology solutions"
		class="hero-right-image"
	/>

	<div class="statistics-section">
		{
			statistics.map((statistic) => (
				<div class="statistic-item">
					<div class="statistic-number-container">
						<div class="statistic-number">{statistic.number}</div>
					</div>
					<div class="statistic-text">
						{statistic.text.bold === 'first' ? (
							<>
								<strong>{statistic.text.first}</strong>
								<br />
								{statistic.text.second}
							</>
						) : (
							<>
								{statistic.text.first}
								<br />
								<strong>{statistic.text.second}</strong>
							</>
						)}
					</div>
				</div>
			))
		}
	</div>

	<a href={withBase('contact')} class="btn btn-outline contact-button">
		Let's transform your business? Contact Us
	</a>
</section>
