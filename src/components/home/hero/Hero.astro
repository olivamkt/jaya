---
import heroLeftImg from '@/assets/home/hero-left.png'
import heroRightImg from '@/assets/home/hero-right.png'
import { Image } from 'astro:assets'
import { withBase } from '@/utils/url'

// Statistics data
const statistics = [
	{
		number: '200',
		text: {
			first: 'Projects',
			second: 'Delivered',
			bold: 'first'
		}
	},
	{
		number: '150',
		text: {
			first: 'Partnerships',
			second: 'Established',
			bold: 'second'
		}
	},
	{
		number: '98%',
		text: {
			first: 'Active',
			second: 'Collaborators',
			bold: 'first'
		}
	}
]
---

<style>
	@import '../../../styles/global.css';

	.hero-section {
		@apply relative;
	}

	/* .hero-slider {
		@apply relative mx-auto;
		@apply flex items-center justify-center;
		@apply min-h-[300px];
	} */

	.hero-text {
		@apply text-center;
		@apply text-primary;
		@apply max-w-[450px];
		@apply text-[50px];
		@apply leading-[0.9];
		@apply tracking-[-2px];
		@apply mx-auto;

		.slide-from-left {
			animation: slideFromLeft 2s forwards;
		}

		.slide-from-right {
			animation: slideFromRight 2s forwards;
		}
	}

	.hero-description {
		@apply mx-auto my-20;
		@apply text-center leading-[1.58] normal-case;
		@apply bg-body;
		@apply text-[#3b3b3b];
	}

	.hero-left-image {
		@apply absolute top-[35%] left-[-100px];
		@apply h-[260px] w-[275px];
		animation: slideInFromRight 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.hero-right-image {
		@apply absolute top-[20%] right-[-100px];
		@apply h-[260px] w-[275px];
		animation: slideInFromLeft 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.statistics-section {
		@apply mx-auto mt-10 mb-25;
		@apply flex justify-center gap-[100px];
	}

	.statistic-item {
		@apply flex items-end;
	}

	.statistic-number-container {
		@apply relative h-[90px] w-[90px];
		@apply bg-primary text-body;
		@apply rounded-tl-[30%] rounded-br-[30%];

		&::before {
			@apply absolute -bottom-[14px] -left-[20px];
			@apply w-[60px];
			@apply text-primary text-[36px] font-bold;
			content: '+';
		}
	}

	.statistic-number {
		@apply absolute -bottom-[16px] left-0;
		@apply text-[46px] font-bold;
		@apply tracking-[-4px];
	}

	.statistic-text {
		@apply mt-10 ml-1;
		@apply text-primary normal-case italic;
	}

	.contact-button {
		@apply mx-auto;
		@apply flex max-w-[420px];
		@apply text-center;
		@apply rounded-full;
		@apply text-primary-light border-primary-light;
	}
</style>

<section class="hero-section relative container py-20">
	<div class="hero-text">
		<div class="slide-from-left"><b>reliable nearshore developers</b></div>
		<div class="slide-from-right"><i>for long-term partnerships </i></div>
	</div>

	<div class="hero-description">
		Jaya is a fully remote software consulting company specializing in<br />
		<b>nearshore staff augmentation, outsourcing and AI development.</b><br />
		Since 2012, weâ€™ve helped companies scale with handpicked<br />
		engineering talent and stable, high-performing teams. From fintech<br />
		and healthtech to retail, SaaS... and beyond. <b
			>Our squads deliver with <br />speed, cultural alignment, and a long-term mindset.</b
		>
	</div>

	<Image
		src={heroLeftImg}
		alt="Hero left illustration showing collaborative team work"
		class="hero-left-image"
	/>
	<Image
		src={heroRightImg}
		alt="Hero right illustration showing technology solutions"
		class="hero-right-image"
	/>

	<div class="statistics-section">
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">9</div>
			</div>
			<div class="statistic-text">years of<br /> <b>nearshore<br /> experience</b></div>
		</div>
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">80</div>
			</div>
			<div class="statistic-text">active<br /> <b>developers</b></div>
		</div>
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">100</div>
			</div>
			<div class="statistic-text"><b>augmented<br /> squads</b> over<br /> the years</div>
		</div>
	</div>

	<a href={withBase('contact')} class="btn btn-outline contact-button">
		Let's transform your business? Contact Us
	</a>
</section>
