---
import heroLeftImg from '@/assets/home/hero-left.png'
import heroRightImg from '@/assets/home/hero-right.png'
import { Image } from 'astro:assets'
import { withBase } from '@/utils/url'
---

<style>
	@reference '../../../styles/global.css';

	.hero-section {
		@apply relative;
		@apply px-10 lg:px-0;
	}

	.hero-text {
		@apply text-center;
		@apply text-primary;
		@apply text-5xl;
		@apply leading-[0.9];
		@apply tracking-[-2px];
		@apply max-w-[450px];
		@apply mx-auto;

		.slide-from-left {
			animation: slideFromLeft 2s forwards;
		}

		.slide-from-right {
			animation: slideFromRight 2s forwards;
		}
	}

	.hero-description {
		@apply text-center;
		@apply text-[#3b3b3b];
		@apply leading-[1.58];
		@apply normal-case;
		@apply mx-auto;
		@apply my-20;
		@apply max-w-[800px];
		@apply lg:max-w-[520px];
	}

	.hero-left-image {
		@apply hidden lg:block;
		@apply absolute;
		@apply top-[35%];
		@apply left-[-100px];
		@apply h-[260px];
		@apply w-[275px];
		animation: slideInFromRight 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.hero-right-image {
		@apply hidden lg:block;
		@apply absolute;
		@apply top-[20%];
		@apply right-[-100px];
		@apply h-[260px];
		@apply w-[275px];
		animation: slideInFromLeft 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
	}

	.statistics-section {
		@apply flex flex-col md:flex-row;
		@apply items-center justify-center;
		@apply gap-10 lg:gap-25;
		@apply mx-auto;
		@apply mt-10;
		@apply mb-25;
	}

	.statistic-item {
		@apply flex;
		@apply items-end;
	}

	.statistic-number-container {
		@apply relative;
		@apply bg-primary;
		@apply text-body;
		@apply h-[90px];
		@apply w-[90px];
		@apply rounded-tl-[30%];
		@apply rounded-br-[30%];

		&::before {
			@apply absolute;
			@apply text-primary;
			@apply text-4xl;
			@apply font-bold;
			@apply w-[60px];
			@apply -bottom-[14px];
			@apply -left-[20px];
			content: '+';
		}
	}

	.statistic-number {
		@apply absolute;
		@apply text-5xl;
		@apply font-bold;
		@apply tracking-[-4px];
		@apply bottom-[-6px];
		@apply left-0;
	}

	.statistic-text {
		@apply text-primary;
		@apply normal-case;
		@apply italic;
		@apply mt-10;
		@apply ml-1;
	}

	.contact-button {
		@apply flex;
		@apply text-center;
		@apply text-primary-light;
		@apply border-primary-light;
		@apply mx-auto;
		@apply max-w-[420px];
		@apply rounded-full;
	}
</style>

<section class="hero-section relative container py-20">
	<div class="hero-text">
		<div class="slide-from-left"><b>reliable nearshore developers</b></div>
		<div class="slide-from-right"><i>for long-term partnerships </i></div>
	</div>

	<div class="hero-description">
		Jaya is a fully remote software consulting company specializing in
		<b>nearshore staff augmentation, outsourcing and AI development.</b><br />
		Since 2012, weâ€™ve helped companies scale with handpicked engineering talent and stable, high-performing
		teams. From fintech and healthtech to retail, SaaS... and beyond.
		<b>Our squads deliver with speed, cultural alignment, and a long-term mindset.</b>
	</div>

	<Image
		src={heroLeftImg}
		alt="Hero left illustration showing collaborative team work"
		class="hero-left-image"
	/>
	<Image
		src={heroRightImg}
		alt="Hero right illustration showing technology solutions"
		class="hero-right-image"
	/>

	<div class="statistics-section">
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">9</div>
			</div>
			<div class="statistic-text">years of<br /> <b>nearshore<br /> experience</b></div>
		</div>
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">80</div>
			</div>
			<div class="statistic-text">active<br /> <b>developers</b></div>
		</div>
		<div class="statistic-item">
			<div class="statistic-number-container">
				<div class="statistic-number">100</div>
			</div>
			<div class="statistic-text"><b>augmented<br /> squads</b> over<br /> the years</div>
		</div>
	</div>

	<a href={withBase('contact')} class="btn btn-outline contact-button">
		Let's transform your business? Contact Us
	</a>
</section>
