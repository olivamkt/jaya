---
import { Image } from 'astro:assets'
import impactImg from '@/assets/home/impact.png'
import fintechImg from '@/assets/home/fintech.png'
import healthtechImg from '@/assets/home/healthtech.png'
import retailImg from '@/assets/home/retail.png'
import saasImg from '@/assets/home/saas.png'
import { withBase } from '@/utils/url'
---

<style>
	@reference "../../../styles/global.css";

	.impact-section {
		@apply min-h-[735px];

		.impact-title {
			@apply text-primary;
			@apply text-3xl;
			@apply tracking-[-0.5px];
			@apply mt-2 mb-10;
		}

		.impact-subtitle {
			@apply text-primary;
			@apply uppercase;
			@apply font-space-grotesk;
		}

		.solutions-list {
			@apply flex flex-row flex-wrap;
			@apply items-center justify-center;
			@apply gap-10 lg:gap-20;
			@apply mt-10;
		}

		.solution-item {
			@apply w-[147px];
		}

		.solution-container {
			@apply h-[147px];
			@apply bg-primary;
			@apply text-white;
			@apply rounded-tl-[50px];
			@apply flex;
			@apply items-center justify-center;
			@apply transition-all;
			@apply duration-500;

			&:hover {
				@apply bg-primary-light;

				img {
					filter: brightness(0);
				}
			}

			img {
				@apply w-[65px];
				@apply h-[65px];
				@apply transition-all;
				@apply duration-500;
			}
		}

		.solution-item-title {
			@apply text-base;
			@apply font-bold;
			@apply mb-4;
		}

		.solution-item-text {
			@apply text-center;
			@apply text-sm;
			@apply text-primary-light;
			@apply font-bold;
			@apply mt-5;
		}

		.impact-description-bold {
			@apply text-primary;
			@apply text-lg;
			@apply font-bold;
			@apply my-5;
		}

		.btn-see-more {
			@apply btn btn-outline btn-primary;
			@apply flex;
			@apply text-center;
			@apply max-w-[420px];
			@apply rounded-full;
			@apply mx-auto;
			@apply mt-10;
		}
	}
</style>

<section class="impact-section px-10 py-20">
	<div class="container">
		<div class="flex flex-row gap-10">
			<div class="text-white lg:w-2/3 lg:max-w-[690px]">
				<h1 class="impact-subtitle">Real Impact</h1>
				<h2 class="impact-title">where <b>we make</b> an impact</h2>
				<p class="text-primary">
					The digital revolution is driven by technology, innovation, and agility. That's why Jaya
					Tech connects companies with highly qualified development squads, ready to create, scale,
					and maintain secure, modern digital products tailored to the unique demands of each
					business.
				</p>
				<p class="impact-description-bold">
					We partner with organizations to deliver custom solutions for management, automation, user
					experience, and data-driven results.
				</p>
				<p class="text-primary">
					Our expertise allows us to accelerate time-to-market, ensure compliance, and deliver
					innovative experiences, always focusing on security, performance, and scalability. Whether
					you want to launch a new product, enhance your processes, or turn data into value, Jaya
					Tech is the ideal partner for companies looking to go beyond the ordinary.
				</p>
			</div>
			<div class="hidden text-white lg:block lg:w-1/3">
				<Image src={impactImg} alt="Impact Image" class="w-[430px]" />
			</div>
		</div>
		<div class="solutions-list">
			<a href={withBase('fintech')} class="solution-item">
				<div class="solution-container">
					<Image src={fintechImg} alt="Fintech Image" class="w-[430px]" />
				</div>
				<div class="solution-item-text">fintech</div>
			</a>
			<a href={withBase('healthtech')} class="solution-item">
				<div class="solution-container">
					<Image src={healthtechImg} alt="Healthtech Image" class="w-[430px]" />
				</div>
				<div class="solution-item-text">healthtech</div>
			</a>
			<a href={withBase('retail')} class="solution-item">
				<div class="solution-container">
					<Image src={retailImg} alt="Retail Image" class="w-[430px]" />
				</div>
				<div class="solution-item-text">retail</div>
			</a>
			<a href={withBase('saas')} class="solution-item">
				<div class="solution-container">
					<Image src={saasImg} alt="SaaS Image" class="w-[430px]" />
				</div>
				<div class="solution-item-text">SaaS</div>
			</a>
		</div>
		<a href="/solutions" class="btn-see-more">See how we delivery accross industries</a>
	</div>
</section>
